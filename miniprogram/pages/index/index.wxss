/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

/* 顶部横幅 - 现代渐变设计 */
.banner {
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.banner::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 1%, transparent 1%);
  background-size: 50rpx 50rpx;
  animation: sparkle 3s linear infinite;
}

@keyframes sparkle {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.banner-content {
  text-align: center;
  z-index: 1;
}

.banner-title {
  display: block;
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.banner-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 2rpx;
}

/* 快速入口 - 现代化卡片设计 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.action-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.action-text {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 600;
}

/* 内容区块设计 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

.section-more {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 纪念馆列表卡片 */
.memorial-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.memorial-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.memorial-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.memorial-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.memorial-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.memorial-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.memorial-dates {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 纪念日提醒设计 */
.reminder-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.reminder-item {
  display: flex;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.reminder-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  padding: 16rpx;
}

.reminder-day {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.reminder-month {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.reminder-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.reminder-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.reminder-desc {
  font-size: 26rpx;
  color: #667eea;
  line-height: 1.4;
}

/* 引导页面 */
.guide {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  margin-top: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.guide-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.1));
}

.guide-text {
  font-size: 30rpx;
  color: #667eea;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.guide-btn {
  width: 320rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.guide-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.4);
}
