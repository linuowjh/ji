/* pages/memorial/create/create.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

/* 表单区块设计 */
.section {
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.form-input {
  width: 100%;
  padding: 28rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 96rpx;
  line-height: 1.4;
  white-space: normal;
  overflow: visible;
  word-wrap: break-word;
  background: #fff;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 28rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fff;
  transition: all 0.3s ease;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.form-picker {
  padding: 28rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s ease;
}

.form-picker:active {
  border-color: #667eea;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.picker-placeholder {
  color: #95a5a6;
}

/* 头像上传样式 */
.avatar-upload {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx dashed #667eea;
  background: rgba(102, 126, 234, 0.05);
  transition: all 0.3s ease;
}

.avatar-upload:active {
  border-color: #764ba2;
  background: rgba(102, 126, 234, 0.1);
}

.avatar-preview {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  color: #667eea;
}

.placeholder-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 60rpx;
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}
