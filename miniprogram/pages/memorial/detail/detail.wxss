/* pages/memorial/detail/detail.wxss */
.memorial-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.memorial-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #d4af37;
  margin-bottom: 30rpx;
}

.memorial-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.memorial-dates {
  font-size: 28rpx;
  color: #ecf0f1;
  margin-bottom: 20rpx;
}

.memorial-epitaph {
  font-size: 32rpx;
  color: #d4af37;
  text-align: center;
  font-style: italic;
  padding: 0 40rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.btn-worship,
.btn-edit,
.btn-share {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: none;
}

.btn-worship {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

.btn-worship .btn-text {
  color: #fff;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #2c3e50;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.biography-text {
  font-size: 30rpx;
  line-height: 48rpx;
  color: #34495e;
  text-align: justify;
}

.tombstone {
  background-color: #95a5a6;
  border-radius: 16rpx 16rpx 0 0;
  padding: 60rpx 40rpx;
  text-align: center;
  position: relative;
  min-height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tombstone.marble {
  background: linear-gradient(135deg, #bdc3c7 0%, #95a5a6 100%);
}

.tombstone-text {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: bold;
  writing-mode: vertical-rl;
  letter-spacing: 8rpx;
}

.worship-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.worship-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.worship-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.worship-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.worship-user {
  font-size: 30rpx;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.worship-action {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
}

.worship-time {
  font-size: 24rpx;
  color: #95a5a6;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 32rpx;
  color: #95a5a6;
}
