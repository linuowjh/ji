/* pages/memorial/detail/detail.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

/* 纪念馆头部 - 现代化设计 */
.memorial-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  border-radius: 32rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.memorial-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.1) 0%, transparent 50%);
}

.memorial-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 40rpx;
  z-index: 1;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.memorial-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.memorial-dates {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
  z-index: 1;
  letter-spacing: 1rpx;
}

.memorial-epitaph {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  text-align: center;
  font-style: italic;
  padding: 0 40rpx;
  line-height: 1.6;
  z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  gap: 20rpx;
}

.btn-worship,
.btn-edit,
.btn-share {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.btn-worship:active,
.btn-edit:active,
.btn-share:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.btn-worship {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

.btn-worship .btn-text {
  color: #fff;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.btn-text {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 600;
}

/* 内容区块 */
.section {
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

.biography-text {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #34495e;
  text-align: justify;
  line-height: 1.8;
}

/* 虚拟墓碑 */
.tombstone {
  background: linear-gradient(135deg, #bdc3c7 0%, #95a5a6 100%);
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  position: relative;
  min-height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tombstone.marble {
  background: linear-gradient(135deg, #d5dbdb 0%, #bdc3c7 100%);
  box-shadow: inset 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.tombstone-text {
  font-size: 36rpx;
  color: #2c3e50;
  font-weight: bold;
  writing-mode: vertical-rl;
  letter-spacing: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 祭扫记录 */
.worship-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.worship-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.worship-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.worship-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.worship-user {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.worship-action {
  font-size: 26rpx;
  color: #667eea;
  margin-bottom: 8rpx;
}

.worship-time {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 统计信息 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.stat-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #7f8c8d;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 30rpx;
  color: #667eea;
  font-weight: 500;
}
