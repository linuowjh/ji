/* pages/memorial/list/list.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  position: relative;
  padding-left: 24rpx;
}

.header-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

.btn-create {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn-create:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.4);
}

/* 纪念馆列表 */
.memorial-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.memorial-item {
  display: flex;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.memorial-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.memorial-cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 0;
  margin-right: 0;
  flex-shrink: 0;
  position: relative;
}

.memorial-cover::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.1) 100%);
}

.memorial-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 32rpx;
}

.memorial-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.memorial-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  flex: 1;
  margin-right: 16rpx;
}

.memorial-badge {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(243, 156, 18, 0.3);
}

.badge-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 600;
}

.memorial-dates {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.memorial-bio {
  font-size: 26rpx;
  color: #7f8c8d;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.memorial-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(102, 126, 234, 0.1);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-text {
  font-size: 22rpx;
  color: #667eea;
  font-weight: 500;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  margin-top: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.1));
}

.empty-text {
  font-size: 30rpx;
  color: #667eea;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 60rpx;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.4);
}

.loading {
  text-align: center;
  padding: 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.no-more {
  text-align: center;
  padding: 40rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #95a5a6;
}
