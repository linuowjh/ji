/* pages/memorial/list/list.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
}

.btn-create {
  background-color: #2c3e50;
  color: #fff;
  border-radius: 50rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.memorial-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.memorial-item {
  display: flex;
  overflow: hidden;
}

.memorial-cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.memorial-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.memorial-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.memorial-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.memorial-badge {
  background-color: #f39c12;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.badge-text {
  font-size: 24rpx;
  color: #fff;
}

.memorial-dates {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

.memorial-bio {
  font-size: 28rpx;
  color: #95a5a6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.memorial-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 28rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #95a5a6;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #7f8c8d;
  margin-bottom: 40rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #95a5a6;
}

.no-more {
  text-align: center;
  padding: 40rpx;
}

.no-more-text {
  font-size: 28rpx;
  color: #95a5a6;
}
