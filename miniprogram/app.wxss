/**app.wxss**/

/* 全局样式变量 */
:root {
  --primary-color: #667eea;
  --primary-dark: #764ba2;
  --secondary-color: #f39c12;
  --secondary-dark: #e67e22;
  --success-color: #27ae60;
  --warning-color: #f1c40f;
  --danger-color: #e74c3c;
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-muted: #95a5a6;
  --background-light: #f8f9fa;
  --background-medium: #e9ecef;
  --white: #ffffff;
  --border-color: #e9ecef;
  --shadow-light: rgba(0, 0, 0, 0.08);
  --shadow-medium: rgba(0, 0, 0, 0.12);
  --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-secondary: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

/* 全局基础样式 */
page {
  background: var(--background-light);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', sans-serif;
  color: var(--text-primary);
  line-height: 1.6;
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background: var(--gradient-primary);
  color: var(--white);
  border-radius: 50rpx;
  padding: 24rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  background: var(--white);
  color: var(--text-primary);
  border-radius: 50rpx;
  padding: 24rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  border: 2rpx solid var(--border-color);
  box-shadow: 0 4rpx 16rpx var(--shadow-light);
  transition: all 0.3s ease;
}

.btn-secondary:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 8rpx var(--shadow-medium);
}

/* 现代化卡片样式 */
.card {
  background: var(--white);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx var(--shadow-light);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx var(--shadow-medium);
}

/* 文本样式 */
.text-primary {
  color: var(--text-primary);
  font-weight: 600;
}

.text-secondary {
  color: var(--text-secondary);
  font-weight: 500;
}

.text-muted {
  color: var(--text-muted);
  font-size: 26rpx;
  font-weight: 400;
}

.text-gradient {
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 现代化的配色方案 */
.primary-bg {
  background: var(--gradient-primary);
  color: var(--white);
}

.secondary-bg {
  background: var(--gradient-secondary);
  color: var(--white);
}

.light-bg {
  background: var(--background-light);
}

.white-bg {
  background: var(--white);
}

/* 边框和阴影工具类 */
.border-radius-sm {
  border-radius: 8rpx;
}

.border-radius-md {
  border-radius: 16rpx;
}

.border-radius-lg {
  border-radius: 24rpx;
}

.border-radius-xl {
  border-radius: 32rpx;
}

.shadow-sm {
  box-shadow: 0 2rpx 8rpx var(--shadow-light);
}

.shadow-md {
  box-shadow: 0 6rpx 20rpx var(--shadow-light);
}

.shadow-lg {
  box-shadow: 0 8rpx 24rpx var(--shadow-medium);
}

/* 间距工具类 */
.mt-1 { margin-top: 8rpx; }
.mt-2 { margin-top: 16rpx; }
.mt-3 { margin-top: 24rpx; }
.mt-4 { margin-top: 32rpx; }
.mt-5 { margin-top: 40rpx; }

.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mb-5 { margin-bottom: 40rpx; }

.p-1 { padding: 8rpx; }
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-5 { padding: 40rpx; }

/* 庄重的配色 - 保持原有纪念主题 */
.solemn-bg {
  background: var(--gradient-primary);
  position: relative;
  overflow: hidden;
}

.solemn-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.1) 0%, transparent 50%);
}

.solemn-text {
  color: #d4af37;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 24rpx;
    border-radius: 20rpx;
  }
}
