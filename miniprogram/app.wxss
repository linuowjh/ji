/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #2c3e50;
  color: #fff;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
}

.btn-secondary {
  background-color: #ecf0f1;
  color: #2c3e50;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 文本样式 */
.text-primary {
  color: #2c3e50;
}

.text-secondary {
  color: #7f8c8d;
}

.text-muted {
  color: #95a5a6;
  font-size: 28rpx;
}

/* 庄重的配色 */
.solemn-bg {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

.solemn-text {
  color: #d4af37;
}
