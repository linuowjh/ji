/* components/time-capsule/time-capsule.wxss */
.time-capsule {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.message-user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.message-username {
  font-size: 30rpx;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.message-time {
  font-size: 24rpx;
  color: #95a5a6;
}

.message-type-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.message-type-badge.voice {
  background-color: #3498db;
}

.message-type-badge.video {
  background-color: #e74c3c;
}

.message-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.voice-player {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.play-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #3498db;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  border: none;
  padding: 0;
}

.play-icon {
  font-size: 48rpx;
  color: #fff;
}

.voice-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.voice-duration {
  font-size: 28rpx;
  color: #7f8c8d;
}

.video-cover {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.video-thumbnail {
  width: 100%;
  height: 100%;
}

.video-play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-play-icon {
  font-size: 64rpx;
  color: #fff;
}

.message-text {
  font-size: 30rpx;
  line-height: 48rpx;
  color: #34495e;
  text-align: justify;
}

.empty {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}

.loading {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #95a5a6;
}
