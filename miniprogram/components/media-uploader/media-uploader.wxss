/* components/media-uploader/media-uploader.wxss */
.media-uploader {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.file-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.file-preview {
  width: 100%;
  height: 100%;
}

.file-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background-color: #ecf0f1;
}

.icon-text {
  font-size: 64rpx;
  margin-bottom: 10rpx;
}

.icon-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #fff;
  font-size: 32rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #bdc3c7;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
}

.upload-icon {
  font-size: 64rpx;
  color: #95a5a6;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #95a5a6;
}

.uploading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}

.progress-text {
  color: #fff;
  font-size: 28rpx;
  margin-top: 10rpx;
}
